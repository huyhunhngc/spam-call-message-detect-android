<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.dotsdev.idcaller.presentation.main.messagetab.tablayout.ImportantMessageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.dotsdev.idcaller.widget.recycler.ContactMessageList
            android:id="@+id/list_important_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:infoList="@{viewModel.listMessage}"
            app:onItemClicked="@{viewModel.onItemClick}">
        </com.dotsdev.idcaller.widget.recycler.ContactMessageList>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
